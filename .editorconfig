# This file is for unifying the coding style for different editors and IDEs
# For vscode support install EditorConfig for VS Code plugin
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.scss]
indent_size = 2

[*.tsx]
indent_size = 4

[*.ts]
indent_size = 4

[*.js]
indent_size = 4
